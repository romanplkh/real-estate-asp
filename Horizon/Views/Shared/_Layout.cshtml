<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fonts")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<!-- NAVIGATION -->
<nav class="navbar navbar-expand-md navbar-light bg-light ">
    <div class="container-fluid mr-5">
        <a href="#" class="nav-brand">
            <img src="/Content/Asset/Images/horizon_logo_header_2.svg" width="250" height="60" alt="">
        </a>
        <button
            class="navbar-toggler"
            data-toggle="collapse"
            data-target="#navbarCollapse"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item mr-4">
                    <a href="#" class="nav-link text-dark font-weight-bold"
                    >LISTINGS</a
                    >
                </li>
                <li class="nav-item mr-4">
                    <a href="#" class="nav-link text-dark font-weight-bold"
                    >CONTACT US</a
                    >
                </li>
                <li class="nav-item mr-4">
                    <a
                        href="#"
                        class="nav-link text-dark font-weight-bold"
                        data-toggle="modal"
                        data-target="#loginModal"
                    >
                        LOGIN
                    </a>
                </li>
                <li class="nav-item">
                    <div class="dropdown">
                        <a
                            href="#"
                            class="nav-link dropdown-toggle text-dark bg-light font-weight-bold"
                            id="ddMenuLink"
                            data-toggle="dropdown"
                            aria-expanded="false"
                        >
                            HELP
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="ddMenuLink">
                            <a href="#" class="dropdown-item">Customer Support</a>
                            <a href="#" class="dropdown-item">FAQ</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>
  
        @RenderBody()


